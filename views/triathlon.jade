extends ../node_modules/jade-bootstrap/layouts/starter

append additionalMeta
	meta(name='description', content="Looking for a coach to get you started? Or perhaps you have a particular event you would like to prepare for. I can either take you out on a run or ride, or write you a programme that will be easy to follow and guarantee results. If you are already competing internationally I can offer advice from what I have learnt along the way.")
append styles
	// Custom styles for this template
	link(href="../css/carousel.css", rel="stylesheet")
block body
	.navbar-wrapper
		.container
			nav.navbar.navbar-inverse.navbar-static-top
				.container
					.navbar-header
						button(type="button" ,class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar" ,aria-expanded="false", aria-controls="navbar")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar

						a(class="navbar-brand", href="/") Adrenaline Fitness
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li
								a(href="/") Home
							li.dropdown.active
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
									| Services
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='mountainbiking') Mountain Biking
									li
										a(href='offroadrunning') Off Road Running
									li
										a(href='personaltrainer') Personal Trainer
									li
										a(href='roadcycling') Road Cycling
									li
										a(href='raceprep') Race Preparation
									li
										a(href='bushwalks') Bush Walks
									li.active
										a(href='triathlon') Triathlon
							li
								a(href="about") About
							li
								a(href="contact") Contact
	.container.marketing

		// START THE FEATURETTES
		hr.featurette-divider
		.row.featurette
			.col-md-7
				h2.featurette-heading
					| Triathlon
					hr.featurette-header-divider
				each s in desc
					p= s
				p Please
					a(href='contact')  contact
					|  Catherine to discuss cost for yourself and friends.

			.col-md-5
				img.featurette-image.img-responsive.center-block(src='../images/triathlon.jpg', alt='Triathlon')
		hr.featurette-divider
		// /END THE FEATURETTES
		// FOOTER
		footer
			p.pull-right
				a(href='#') Back to top
			p
				| © 2016 Adrenaline Fitness ·
				a(href='about') About
				|  ·
				a(href='contact') Contact

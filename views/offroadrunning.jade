extends ../node_modules/jade-bootstrap/layouts/starter

append additionalMeta
	meta(name='description', content='Experience the joy of running off-road in the trails around Wellington. Let me show you the secret pathways that feature native flora and fauna, amazing birdlife and wonderful vistas, all while getting fit, burning calories, developing muscle.')
append styles
	// Custom styles for this template
	link(href="../css/carousel.css", rel="stylesheet")
block body
	.navbar-wrapper
		.container
			nav.navbar.navbar-inverse.navbar-static-top
				.container
					.navbar-header
						button(type="button" ,class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar" ,aria-expanded="false", aria-controls="navbar")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar

						a(class="navbar-brand", href="/") Adrenaline Fitness
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li
								a(href="/") Home
							li.dropdown.active
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
									| Services
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(href='mountainbiking') Mountain Biking
									li.active
										a(href='offroadrunning') Off Road Running
									li
										a(href='personaltrainer') Personal Trainer
									li
										a(href='roadcycling') Road Cycling
									li
										a(href='raceprep') Race Preparation
									li
										a(href='bushwalks') Bush Walks
									li
										a(href='triathlon') Triathlon
							li
								a(href="about") About
							li
								a(href="contact") Contact
							li
								a(href="testimonials") Testimonials
	.container.marketing

		// START THE FEATURETTES
		hr.featurette-divider
		.row.featurette
			.col-md-7
				h2.featurette-heading
					| Off Road Running
					hr.featurette-header-divider
				each s in desc
					p= s
				p Please
					a(href='contact')  contact
					|  Catherine to discuss cost for yourself and friends.
			.col-md-5
				img.featurette-image.img-responsive.center-block(src='../images/offroadrunning.jpg', alt='Off Road Running')
		hr.featurette-divider
		// /END THE FEATURETTES
		// FOOTER
		footer
			p.pull-right
				a(href='#') Back to top
			p
				| © 2016 Adrenaline Fitness ·
				a(href='about') About
				|  ·
				a(href='contact') Contact
